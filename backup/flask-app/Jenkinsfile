pipeline {
    agent any

    environment {
        DOCKER_HUB_CREDENTIALS = credentials('dockerhub-credentials') 
        IMAGE_NAME = "sushmitha6300/flask-app"
    }

    stages {
        stage('Clone Repo') {
            steps {
                git branch: 'main', url: 'https://github.com/Sushmitha6300/ansible-flask-docker.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('flask-app') {
                    sh "docker build -t $IMAGE_NAME ."
                }
            }
        }

        stage('Push to DockerHub') {
            steps {
                script {
                    sh "echo $DOCKER_HUB_CREDENTIALS_PSW | docker login -u $DOCKER_HUB_CREDENTIALS_USR --password-stdin"
                    sh "docker push $IMAGE_NAME"
                }
            }
        }
        
        
        stage('Trigger Ansible Deployment') {
            steps {
                sshagent(['controller-ssh-key']) {
                    script {
                      def controllerIP = readFile('../controller-ip.txt').trim()
                      sh """
                      ssh -o StrictHostKeyChecking=no ubuntu@${controllerIP} 'ansible-playbook -vv -i inventory.ini playbook.yml --tags deploy'
                      """
                    }
                }
            }
        }
    }
}
